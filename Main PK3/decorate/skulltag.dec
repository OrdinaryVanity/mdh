actor Chroma_LightPoint
{
    +CLIENTSIDEONLY
    +NOINTERACTION
    
    RenderStyle Add
    XScale 0.5
    YScale 0.4

    Alpha 0.7

    States
    {
      Spawn:
        CCLD Z 1 bright A_FadeOut(0.1)
        loop
    }
}

actor Chroma_Cloud
{
    +CLIENTSIDEONLY
    +NOINTERACTION

    RenderStyle Add
    Alpha 0.45

    States
    {
      Spawn:
        CCLD ABCDEFG 2 bright A_FadeOut(0.05)
        loop
    }
}

