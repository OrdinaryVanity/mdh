ACTOR WaveBoltCharged
{
    Radius 12
    Height 8
    Projectile
    +NOGRAVITY
    +HEXENBOUNCE
	+FORCEXYBILLBOARD
    BounceFactor 0.75
    WallBounceFactor 0.75
    BounceCount 3
    Speed 30
    Damage (55)
    Scale 0.65
    RenderStyle Add
    Alpha 0.75
    DeathSound "wbeam/chhit"
    Damagetype "WaveCharged"
    Decal DoomImpScorch
    States
    {
      Spawn:
        TNT1 A 0
        goto Spawn1

      Spawn1:
        TNT1 A 0
        TNT1 A 0 A_CustomMissile("WaveTrail",0,0,0)
        WSHT A 1 BRIGHT A_BishopMissileWeave
        TNT1 A 0 A_CustomMissile("WaveTrail",0,0,0)
        WSHT A 1 BRIGHT A_BishopMissileWeave
        TNT1 A 0 A_CustomMissile("WaveTrail",0,0,0)
        WSHT B 1 BRIGHT A_BishopMissileWeave
        TNT1 A 0 A_CustomMissile("WaveTrail",0,0,0)
        WSHT B 1 BRIGHT A_BishopMissileWeave
        loop

      Death:
        TNT1 A 0
        TNT1 AAAAAA 0 A_CustomMissile("WaveSplatterShot",0,0,random(-180,180),6,random(-45,45)) //originally 12 frames
        WTRL A 2 BRIGHT A_Scream
        WTRL BCD 2 BRIGHT
        stop
    }
}

