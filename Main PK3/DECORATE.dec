const int METROID_DECORATE      = 594;

actor Boolean: Inventory
{
    Inventory.MaxAmount 1
    +UNDROPPABLE
    -INVBAR
}

actor Counter: Inventory
{
    Inventory.MaxAmount 0x7FFFFFFF
    +UNDROPPABLE
    -INVBAR
}

actor Trigger: CustomInventory
{
    Inventory.MaxAmount 0
    +AUTOACTIVATE
}

actor ScanPuff
{
    +CLIENTSIDEONLY
    +BLOODLESSIMPACT
	+HITTRACER
	+PUFFONACTORS
	
    States
    {
    Spawn:
		TNT1 A 1
        stop
	
	Crash:
		TNT1 A 0
		stop
	
	XDeath:
		TNT1 A 0
		TNT1 A 1 ACS_Execute(602,0)
		stop
    }
}

actor EmptyTelefog
{
    +NOINTERACTION
    +CLIENTSIDEONLY

    Radius 1
    Height 1

    States
    {
      Spawn:
        TNT1 A 0
        stop
    }
}

actor TranslationHolder
{
    +NOINTERACTION
    +NOBLOCKMONST

    Radius 1
    Height 1
    
    States
    {
      Spawn:
        TNT1 A -1
        stop
    }
}

actor SpaceChecker
{
    Radius 20
    Height 60
    Mass 100
    Speed 0
    -SOLID
    -SHOOTABLE
    +NOBLOCKMONST
    States
    {
    Spawn:
        TNT1 A 1
        loop
    }
}

actor ChasecamChecker
{
    Radius 1
    Height 1

    +SERVERSIDEONLY
    +NOGRAVITY
    -SOLID
    +NOBLOCKMONST

    States
    {
      Spawn:
        TNT1 A 18
        stop
    }
}

actor ChasecamActor
{
    Radius 0
    Height 0

    +NOINTERACTION
    +NOBLOCKMONST
    +THRUACTORS
    +NOGRAVITY
    +NOTELEPORT

    States
    {
      Spawn:
        TNT1 A -1
        stop
    }
}

actor CheckSolidFooting
{
    +PUFFONACTORS
    +BLOODLESSIMPACT
    +HITTARGET
    +PAINLESS
    
    Height 0
    
    states
    {
        Spawn:
            TNT1 A 0
            stop
    }
}

actor UnSetShootable : CustomInventory
{
    states
    {
        Pickup:
            TNT1 A 0 A_ChangeFlag("SHOOTABLE", false)
            stop
    }
}

actor SetShootable : CustomInventory
{
    states
    {
        Pickup:
            TNT1 A 0 A_ChangeFlag("SHOOTABLE", true)
            stop
    }
}

actor IceChunk2 : IceChunk { Health 1 +CLIENTSIDEONLY -SOLID }

